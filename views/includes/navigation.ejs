<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">MENU</button>
    <div class="">
        <img src="https://scontent.flmm1-1.fna.fbcdn.net/v/t39.30808-6/347808716_916695546077593_6610587346100951465_n.jpg?_nc_cat=108&ccb=1-7&_nc_sid=0debeb&_nc_eui2=AeF_RANcwtVHb1Od1y-PJTaLGlaMzjuE0q4aVozOO4TSrh7XrcSLvfJgPwa-UtIcjydkUyawxkZ4ktpyfmsbirOT&_nc_ohc=-aOGm3a7I5kAX-w2Bp1&_nc_ht=scontent.flmm1-1.fna&oh=00_AfB93ORlK9yOA_Mi2WLGydslSGSyqM1AbcJuYqYK_TlaXA&oe=646BDBDF" alt="CubeÂ´s Crafters Logo">
    </div>
    <div class="input-box">
        <form action="/search" method="post">
            <input type="text" placeholder="Search..." name="search" id="search">
            <span class="icon">
                <i class="uil uil-search search-icon"></i>
            </span>
            <i class="uil uil-times close-icon"></i>
        </form>        
    </div>
    <nav class="main-header__nav">  
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>
            </li>
            <% if (isAuthenticated) { %>
            <li class="main-header__item">
                <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
            </li>

                <% if (isAdmin) { %>
                
                <li class="main-header__item">
                    <a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Products</a>
                </li>
                <% } %>
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
            <li class="main-header__item">
                <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/register' ? 'active' : '' %>" href="/register">Register</a>
            </li>
            <% } else { %>
            <li class="main-header__item">
                <form action="/logout" method="post">
                    <!-- <input type="hidden" name="_csrf" value=" "> -->
                    <button type="submit">Logout</button>
                </form>
            </li>
            <% } %>
        </ul>
    </nav>
</header>

