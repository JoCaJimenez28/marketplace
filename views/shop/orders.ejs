<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
</head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else {%>
                <div>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1># <%= order.id %></h1>
                            <ul class="orders__products">
                                <% let total = 0 %>
                                <% order.products.forEach(product => { %> 
                                    <li class="orders__products-item"><%= product.title %> (<%= product.orderItem.quantity %>) Price: $<%= product.orderItem.totalPrice %></li> 
                                    <% total = total + product.orderItem.totalPrice %>
                                <% }); %> 
                                <h4>Total: $<%= total %></h4>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            </div>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>